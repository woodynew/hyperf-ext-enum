{
    "name": "woodynew/hyperf-ext-enum",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "enum"
    ],
    "description": "Simple, extensible and powerful enumeration implementation for Hyperf.",
    "authors": [
        {
            "name": "Woody",
            "email": "78925880@qq.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "HyperfExt\\Enum\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\Enum\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-swoole": ">=4.5",
        "doctrine/dbal": "^3.0",
        "hanneskod/classtools": "~1.2",
        "hyperf/framework": "3.0.*",
        "hyperf/di": "3.0.*",
        "hyperf/database": "~3.0.0",
        "hyperf/filesystem": "^3.0",
        "woodynew/hyperf-validation": "3.0.*",
        "laminas/laminas-code": "^4.11"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "^4.5",
        "hyperf/testing": "~3.0.0"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit --prepend tests/bootstrap.php -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "HyperfExt\\Enum\\ConfigProvider"
        }
    }
}